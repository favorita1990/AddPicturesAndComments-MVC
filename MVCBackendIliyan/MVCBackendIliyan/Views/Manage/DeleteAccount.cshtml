@model MVCBackendIliyan.Models.UserModel
@{
    ViewBag.Title = "Manage";
}


<div class="login">
    <div class="login-grids">
        <div class="col-md-6 log">
            <div id="ajaxBackOrDeleteId">
                <h2 class="text-center text-warning">Delete Account</h2>

                <h3 class="text-center text-info">Are you sure you want to delete this?</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            First Name:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            Last Name:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                            Genter:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Genter)
                        </dd>

                        <dt>
                            Created Account:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Time)
                        </dd>

                        <dt>
                            Email:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                    </dl>

                    @using (Html.BeginForm("DeleteAccount", "Manage", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-xs-9 col-sm6 col-md-6">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </div>
                            <div class="col-xs-3 col-sm-6 col-md-6">
                                <button type="button" class="btn btn-warning pull-left">
                                    @Ajax.ActionLink("Back", "PartialIndex",
                      new AjaxOptions
                      {
                          UpdateTargetId = "ajaxBackOrDeleteId",
                          InsertionMode = InsertionMode.Replace,
                          HttpMethod = "Get"
                      })
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js "></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js "></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryunob")
}
