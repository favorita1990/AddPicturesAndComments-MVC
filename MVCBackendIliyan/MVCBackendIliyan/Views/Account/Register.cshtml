@model MVCBackendIliyan.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="sign-up-form">
    <h3>Register Here</h3>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
    <div>
        <br />
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>

    @Html.AntiForgeryToken()

        <div class="sign-up">
            <div class="sign-u">
                <h5>Personal Information</h5>
                <div class="sign-up1">
                    <h4 class="a">First Name* :</h4>
                </div>
                <div class="sign-up2">
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="clearfix"> </div>
            </div>

            <div class="sign-u">
                <div class="sign-up1">
                    <h4 class="b">Last Name* :</h4>
                </div>
                <div class="sign-up2">
                    @Html.TextBoxFor(m => m.LastName)
                </div>
                <div class="clearfix"> </div>
            </div>

            <div class="sign-u">
                <div class="sign-up1">
                    <h4 class="c">Email Address* :</h4>
                </div>
                <div class="sign-up2">
                    @Html.TextBoxFor(m => m.Email)
                </div>
                <div class="clearfix"> </div>
            </div>

            <div class="sign-u">
                <div class="sign-up1">
                    <h4 class="c">Genter* :</h4>
                </div>
                <div class="sign-up2">
                    <br />
                    <fieldset>
                        @if (TempData["genter"] != null)
                        {
                        <h2 class="text-center text-danger">@TempData["genter"]</h2>
                        }
                        <select name="genter" id="genter">
                            <option value="1">Male</option>
                            <option value="0">Female</option>
                        </select>
                    </fieldset>
                </div>
                <div class="clearfix"> </div>
            </div>

            <h6>Login Information</h6>
            <div class="sign-u">
                <div class="sign-up1">
                    <h4 class="d">Password* :</h4>
                </div>
                <div class="sign-up2">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div class="clearfix"> </div>
            </div>

            <div class="sign-u">
                <div class="sign-up1">
                    <h4>Confirm Password* :</h4>
                </div>
                <div class="sign-up2">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </div>
                <div class="clearfix"> </div>
            </div>

            <input type="submit" value="Register">
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}